---
import MetaHead from "~components/Head.astro";
import Navigation from "~components/Navigation.astro";
import RepositoryCard from "~components/RepositoryCard.astro";
import "~styles/global.scss";

const SITE_TITLE = "projects | yalin.io";
const SITE_DESCRIPTION = "projects i've been working on";

const websites = [
    {
        path: "https://gentsandginger.com/",
        name: "gentsandginger.com",
        date: "08.2025"
    },
    {
        path: "https://www.kjj.co.uk",
        name: "kjj.co.uk",
        date: "06.2024"
    }
];

const cards = {
    projects: [
        {
            path: "ostromia/promethium",
            description: "Library for calculating statistical distributions, written in pure Python with zero dependencies.",
            language: ["Python"]
        },
        {
            path: "ostromia/reglup",
            description: "A minimal yet customisable template for building statically generated React projects.",
            language: ["TypeScript"]
        },
        {
            path: "ostromia/zygon",
            description: "Transpile OCR GCSE & A-Level Pseudocode into Python.",
            language: ["Svelte", "TypeScript", "SCSS"]
        }
    ],
    other_repositories: [
        {
            path: "ostromia/dotfiles",
            description: "trying to figure out how VimScript works",
            language: ["Lua", "Shell", "Python", "PowerShell", "AutoHotkey", "Vim Script"]
        },
        {
            path: "ostromia/yalin.io",
            description: "website & stuff",
            language: ["MDX", "Astro", "TypeScript", "SCSS"]
        }
    ]
};
---

<html lang="en">
    <head>
        <MetaHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>

    <body>
        <Navigation />

        <main>
            <h1>Websites I've Built</h1>

            <div class="websitesivebuilt">
                {
                    websites.map((e) => (
                        <div>
                            <code>{e.date}</code>
                            <code>â€¢</code>
                            <a href={e.path}>{e.name}</a>
                        </div>
                    ))
                }
            </div>

            <h1>Projects</h1>

            {cards.projects.map((e) => <RepositoryCard path={e.path} description={e.description} language={e.language} />)}

            <h1>Other Repositories</h1>

            {cards.other_repositories.map((e) => <RepositoryCard path={e.path} description={e.description} language={e.language} />)}
        </main>
    </body>
</html>

<style lang="scss">
    @use "~styles/landing";

    main {
        max-width: 600px;
    }

    .websitesivebuilt {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        a {
            display: block;
            text-decoration: none;
        }

        div {
            display: flex;
            align-items: center;
        }

        code {
            color: white;
            padding-right: 0.5rem;
            box-sizing: border-box;
        }
    }
</style>
