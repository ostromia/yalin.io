---
const currentPath = Astro.url.pathname;
---

<nav>
    <a href="/" class={currentPath === "/" ? "active" : ""}>home</a>
    <a href="/projects" class={currentPath === "/projects/" ? "active" : ""}>projects</a>
    <a href="/articles" class={currentPath === "/articles/" ? "active" : ""}>articles</a>
    <a href="https://github.com/ostromia">github</a>
</nav>

<style lang="scss">
    nav {
        display: grid;
        grid-template-columns: 1fr repeat(3, min-content);
        gap: 1rem;
        padding: 1rem;
        box-sizing: border-box;
    }

    a {
        color: grey;
        text-decoration: none;
    }

    a:hover {
        cursor: pointer;
        color: white;
    }

    .active {
        color: white;
    }
</style>
