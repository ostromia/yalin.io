---
import { A } from "~components/elements";
import colorsJSON from "~assets/colors.json";

interface Props {
    path: string;
    description: string;
    language: string[];
}
const { path, description, language } = Astro.props;

interface ColorsJSON {
    [language: string]: {
        color: string | null;
        url: string;
    };
}
const colors: ColorsJSON = colorsJSON;
---

<div class="wrapper">
    <div class="title">
        <svg height="16" width="16" fill="currentColor" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M2 2.5A2.5 2.5 0 014.5 0h8.75a.75.75 0 01.75.75v12.5a.75.75 0 01-.75.75h-2.5a.75.75 0 110-1.5h1.75v-2h-8a1 1 0 00-.714 1.7.75.75 0 01-1.072 1.05A2.495 2.495 0 012 11.5v-9zm10.5-1V9h-8c-.356 0-.694.074-1 .208V2.5a1 1 0 011-1h8zM5 12.25v3.25a.25.25 0 00.4.2l1.45-1.087a.25.25 0 01.3 0L8.6 15.7a.25.25 0 00.4-.2v-3.25a.25.25 0 00-.25-.25h-3.5a.25.25 0 00-.25.25z"></path>
        </svg>
        <A href={`https://github.com/${path}`}> {path}</A>
    </div>

    <div class="languages">
        {
            language.map((e: string) => (
                <div>
                    <div class="language-icon" style={`background-color:${colors[e].color}`} />
                    <div class="language-text">{e}</div>
                </div>
            ))
        }
    </div>

    <div class="description">
        {description}
    </div>

    <slot />
</div>

<style lang="scss">
    @use "~styles/colors";

    .wrapper {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;

        padding: 1rem;
        border-radius: 5px;
        box-sizing: border-box;

        color: colors.$grey;
        background-color: colors.$foreground-color;
    }

    .title {
        display: flex;
        align-items: center;

        > svg {
            fill: colors.$grey;
            padding-right: 0.25rem;
        }
    }

    $l_lh: 10px;

    .languages {
        display: flex;
        gap: 5px 10px;
        flex-wrap: wrap;

        > div {
            display: flex;
            align-items: center;
        }
    }

    .language-icon {
        height: $l_lh;
        width: $l_lh;
        border-radius: 100%;
    }

    .language-text {
        padding-left: 3px;
        box-sizing: border-box;
    }

    .description {
        min-height: 16px;
    }
</style>
